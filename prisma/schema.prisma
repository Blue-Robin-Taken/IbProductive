generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  passHash String?

  // ClientTask ClientTask[]
}

model VerificationToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  passHash  String?
  username  String?
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model ClientTask {
  id String @id @default(cuid())

  // user   User @relation(fields: [userId], references: [id])
  // userId Int

  name        String
  description String?
  year        Int
  month       Int
  date        Int
  labels      String[]
  bools       Boolean[]
}
